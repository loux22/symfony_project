{% block body %}
<div class="container-login100" style="background-image: url('{{ asset('images/bg-01.jpg') }}');">
	<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
		<form class="login100-form validate-form" action="" method="post" enctype="multipart/form-data">
			<span class="login100-form-title p-b-49">
				Inscription
			</span>
			{{form_start(signupForm)}}
			

			<div class="wrap-input100 validate-input m-b-23" data-validate="Le nom d'utilisateur est requis !">
				<span class="label-input100">Pseudo</span>
				<!-- <input class="input100" placeholder="Mail" required name="_username" type="text"> -->
				{{form_errors(signupForm.username)}}
				{{form_widget(signupForm.username)}}
				<span class="focus-input100" data-symbol="&#xf206;"></span>
			</div>

			<div class="wrap-input100 validate-input" data-validate="Le mot de passe est requis !">
				<span class="label-input100">Mot de passe</span>
				<!-- <input class="input100" placeholder="mot de passe" required name="_password" type="password"> -->
				{{form_errors(signupForm.password.first)}}
				{{form_widget(signupForm.password.first)}}
				<span class="focus-input100" data-symbol="&#xf190;"></span>
			</div>

			<div class="wrap-input100 validate-input m-b-23" data-validate="Le mot de passe est requis !">
				{{form_widget(signupForm.password.second)}}
				<span class="focus-input100" data-symbol="&#xf190;"></span>
			</div>

			<div class="wrap-input100 validate-input m-b-23" data-validate="L'email est requis !">
				<span class="label-input100">Email</span>
				<!-- <input class="input100" placeholder="mot de passe" required name="_password" type="password"> -->
				{{form_errors(signupForm.email)}}
				{{form_widget(signupForm.email)}}
				<span class="focus-input100" data-symbol="&#x40;"></span>
			</div>

			<div class="wrap-input100 validate-input m-b-30" data-validate="Une image est requise !">
				<span class="label-input100">Image</span>
				{{form_widget(signupForm.file)}}
			</div>





			<div class="container-login100-form-btn">
				<div class="wrap-login100-form-btn">
					<div class="login100-form-bgbtn"></div>
					<!-- <button class="login100-form-btn">
							Se connecter
						</button> -->
					{{form_widget(signupForm.submit)}}
				</div>
			</div>

			{{form_end(signupForm)}}

			<div class="flex-col-c p-t-155">
				<a href="#" class="txt2">
					Sign Up
				</a>
			</div>
		</form>
	</div>
</div>


<div id="dropDownSelect1"></div>
{% endblock %}

