{% extends 'base.html.twig' %}

{% block title %}Hello MessageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">

    <h2>
        <img src="{{ asset('images/upload/' ~ groupe.photo ) }}" alt="">
        {{ groupe.nom }}
    </h2>

    {% for message in messages %}
    <p>

        <div>
            <img src="{{ asset('images/upload/' ~ message.user.photo ) }}" alt="">
            {{ message.user.username }}
        </div>
        <div>
            {{ message.content }}
        </div>
        <div>
            {{ message.state }}
        </div>
        <div>
            {{ message.date.date }}
        </div>
    </p>

    {% endfor %}
</div>
{% endblock %}